<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">



    <!-- Anime Thumbnail Image -->
    <ImageView
        android:id="@+id/animeThumbnail"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Anime Thumbnail"
        android:scaleType="centerCrop" />

    <!-- Container for Text (Title, Release Date, Sub/Dub) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Anime Title -->
        <TextView
            android:id="@+id/animeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Title"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary" />

        <!-- Release Date -->
        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Date: Unknown"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary" />

        <!-- Sub or Dub -->
        <TextView
            android:id="@+id/subOrDub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Sub"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>

</LinearLayout>
